<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_project_task_template_tree" model="ir.ui.view">
            <field name="name">project.task.template.tree</field>
            <field name="model">project.task.template</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="view_project_task_template_form" model="ir.ui.view">
            <field name="name">project.task.template.form</field>
            <field name="model">project.task.template</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="ot_checklist_form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                
                            </group>
                            <group>
                                
                            </group>
                            <group>
                                <field name="task_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_project_task_template">
            <field name="name">Task templates</field>
            <field name="res_model">project.task.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_project_task_template" 
            name="Task templates" 
            parent="sale.menu_sale_config"
            action="sat_companies_project.action_view_project_task_template"
            />
    </data>
</odoo> 