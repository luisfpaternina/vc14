<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_sat" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="99"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="My Module" string="SAT" data-key="my_module">
                        <h2>Dates of technical in budget</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label string="Show technical" for="show_technical"/>
                                    <div class="text-muted">Enable technical of gadget in budget</div>
                                    <field name="show_technical"/>
                                </div>
                            </div> 
                        </div>
                        <h2>Potencial client configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label string="Activate potencial client" for="is_potencial_client"/>
                                    <div class="text-muted">Required fields for potencial contacts</div>
                                    <field name="is_potencial_client"/>
                                </div>
                            </div> 
                        </div>
                        <h2>Account configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label string="charge" for="charge"/>
                                    <div class="text-muted">Required account</div>
                                    <field name="charge" widget="text"/>
                                </div>
                            </div> 
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
